<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/icon_place"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/circle_gray">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_pin_drop_white_24dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <com.andrisasuke.placetagging.custom.XTextView
        android:id="@+id/place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_place"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:singleLine="true"
        app:fontStyle="regular"
        android:textColor="@color/black"
        tools:text="Drink Corner 01"/>

    <com.andrisasuke.placetagging.custom.XTextView
        android:id="@+id/place_desc"
        android:layout_below="@+id/place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_place"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="@color/soft_gray"
        tools:text="Jln. Permata Intan 3"/>

</RelativeLayout>